{
  "name": "@manticorp/csv-mapper",
  "version": "0.1.0",
  "description": "CSV column mapper for the browser with optional UI, auto-mapping, transforms, validation, and robust parsing via PapaParse.",
  "keywords": [
    "csv",
    "mapping",
    "browser",
    "vanilla-js",
    "import",
    "data"
  ],
  "license": "MIT",
  "author": "Harry Mustoe-Playfair",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manticorp/csv-mapper.git"
  },
  "homepage": "https://github.com/manticorp/csv-mapper#readme",
  "bugs": {
    "url": "https://github.com/manticorp/csv-mapper/issues"
  },
  "main": "dist/csv-mapper.umd.js",
  "module": "dist/csv-mapper.esm.js",
  "types": "dist/csv-mapper.d.ts",
  "browser": "dist/csv-mapper.umd.min.js",
  "unpkg": "dist/csv-mapper.umd.min.js",
  "jsdelivr": "dist/csv-mapper.umd.min.js",
  "exports": {
    ".": {
      "import": "./dist/csv-mapper.esm.js",
      "require": "./dist/csv-mapper.umd.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development rollup -c",
    "watch": "cross-env NODE_ENV=development rollup -cw",
    "build": "cross-env NODE_ENV=production rollup -c",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/papaparse": "^5.3.16",
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "rollup": "^4.0.0",
    "rollup-plugin-delete": "^3.0.1",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "papaparse": "^5.5.3"
  }
}
